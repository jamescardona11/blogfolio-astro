---
interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

{
  tags.length > 0 && (
    <div class='mt-2 flex gap-2 items-center'>
      <div class='w-full md:w-auto flex flex-wrap gap-3'>
        {tags?.map(tag => (
          <a
            href={`/blog/tag/${tag?.toLowerCase()}`}
            class='text-sm text-gray-500 dark:text-stone-300'
          >
            #{tag}
          </a>
        ))}
      </div>
    </div>
  )
}

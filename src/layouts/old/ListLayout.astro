---
import type { Page, CollectionEntry } from 'astro:content'
import RootLayout from '../root/RootLayout.astro'
import Pagination from '@/components/Pagination.astro'
import FormattedDate from '@/components/for-pages/blog/FormattedDate.astro'
import Tag from '@/components/old/Tag.astro'
import { Link } from '@radix-ui/react-navigation-menu'

interface Props {
  title: string
  description: string
  page: Page<CollectionEntry<'blog'>[]>
}

const { title, description, page } = Astro.props
const hasDefaultSlot = Astro.slots.has('default')
---

<RootLayout {title} {description}>
  <div class='divide-y divide-gray-200 dark:divide-gray-700'>
    <div class='space-y-2 pb-8 pt-6 md:space-y-5'>
      <h1
        class='text-3xl font-extrabold leading-9 tracking-tight text-gray-900 dark:text-gray-100 sm:text-4xl sm:leading-10 md:text-6xl md:leading-14'
      >
        {title}
      </h1>
      {
        hasDefaultSlot && (
          <div class='prose dark:prose-invert py-4'>
            <slot />
          </div>
        )
      }
    </div>
    <ul>
      {!page.data.length && 'No posts found.'}
      {
        page.data.map(
          ({
            slug,
            data: { date, title, summary, tags }
          }: CollectionEntry<'blog'>) => (
            <li class='py-4'>
              <article class='space-y-2 xl:grid xl:grid-cols-4 xl:items-baseline xl:space-y-0'>
                <dl>
                  <dt class='sr-only'>Published on</dt>
                  <dd class='text-base font-medium leading-6 text-gray-500 dark:text-gray-400'>
                    <FormattedDate date={date} />
                  </dd>
                </dl>
                <div class='space-y-3 xl:col-span-3'>
                  <div>
                    <h3 class='text-2xl font-bold leading-8 tracking-tight'>
                      <Link
                        href={`/blog/${slug}`}
                        class='text-gray-900 dark:text-gray-100'
                      >
                        {title}
                      </Link>
                    </h3>
                    <div class='flex flex-wrap'>
                      {tags.map(({ slug }) => (
                        <Tag slug={slug} />
                      ))}
                    </div>
                  </div>
                  <div class='prose max-w-none text-gray-500 dark:text-gray-400'>
                    {summary}
                  </div>
                </div>
              </article>
            </li>
          )
        )
      }
    </ul>
  </div>
  {(page.url.next || page.url.prev) && <Pagination page={page} />}
</RootLayout>

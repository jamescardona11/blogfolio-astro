---
import type { ExperienceItem } from '@/lib/models/experience-item'
import BaseCard from '../BaseCard.astro'

interface Props {
  currentWork?: ExperienceItem | null
}

const { currentWork } = Astro.props
---

{
  currentWork && (
    <BaseCard title='Current job' variant='right'>
      <div class='mr-1 truncate'>
        <span class='text-sky-500 mr-2'> {'>👨🏻‍💻'} </span>
        <a class='font-sans font-[650] text-sm truncate'>
          {currentWork.position}
        </a>
      </div>
      <div class='mr-1 truncate'>
        <span class='text-sky-500 mr-2'> {'>🏢'} </span>
        <a
          href={currentWork.link}
          target='_blank'
          class='font-sans font-[650] text-sm truncate'
          rel='noreferrer'
        >
          {currentWork.site}
        </a>
      </div>
    </BaseCard>
  )
}

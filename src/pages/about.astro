---
import { siteMetadata } from '@/site-metadata'
import { getSummaryData } from '@/lib/data/about-me-provider'

import RenderBlocks from '@/components/notion-blocks/RenderBlocks.astro'
import MiddleArea from '@/layouts/two-columns/MiddleArea.astro'
import TwoColumnsLayout from '@/layouts/two-columns/TwoColumnsLayout.astro'

const { summaryData } = await getSummaryData()
---

<TwoColumnsLayout metaTitle={siteMetadata.name}>
  <MiddleArea>
    <RenderBlocks data={summaryData} />
  </MiddleArea>
</TwoColumnsLayout>

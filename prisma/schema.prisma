// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// POST - Other content reactions
model Content {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  slug      String   @unique
  likes     Int      @default(0)
  loves     Int      @default(0)
  claps     Int      @default(0)
  party     Int      @default(0)
  views     Int      @default(0)
}

model Session {
  id        String   @id
  createdAt DateTime @default(now())
  likes     Int      @default(0)
  loves     Int      @default(0)
  claps     Int      @default(0)
  party     Int      @default(0)
}

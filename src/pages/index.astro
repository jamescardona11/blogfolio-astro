---
import { getCollection } from 'astro:content'

import { SITE_METADATA, ITEMS_PER_PAGE } from '@/data/consts'
import RootLayout from '@/layouts/RootLayout.astro'
import Link from '@/components/Link.astro'
import FormattedDate from '@/components/FormattedDate.astro'
import Tag from '@/components/Tag.astro'
import { excludeDrafts, sortBlogPosts } from '@/functions'
import { socialMedia } from '@/data/about-me-data'
import Icons, { type IconKey } from '@/components/icons/Icons.astro'

const posts = await getCollection('blog', excludeDrafts).then(sortBlogPosts)
---

<RootLayout title='James Cardona' description='Desc'>
  <div class='container flex flex-col items-center max-w-[62rem] min-h-screen'>
    <div class='flex flex-col pt-12 pb-16 md:pt-16 md:pb-20'>
      <section class='py-10 space-y-6'>
        <div class='flex flex-col items-center gap-4 text-center'>
          <div class='flex gap-3 mt-2'>
            {
              Object.keys(socialMedia).map(key => {
                const element = socialMedia[key]

                return (
                  <>
                    <li class='pt-2 flex'>
                      <a
                        href={element.link}
                        target='_blank'
                        class='flex text-sm font-medium transition group text-zinc-800 hover:text-primary dark:text-zinc-200'
                      >
                        <Icons
                          kind={element.icon as IconKey}
                          href={SITE_METADATA.youtube}
                          size={6}
                        />
                      </a>
                    </li>
                  </>
                )
              })
            }
          </div>
          <h1 class='text-3xl font-heading sm:text-5xl md:text-6xl lg:text-7xl'>
            Welcome to my digital domain, I write about coding.
          </h1>
          <p
            class='max-w-[42rem] leading-normal text-muted-foreground sm:text-xl sm:leading-8'
          >
            I share my insights on crafting exceptional products, honing my
            developer prowess, and growing a successful tech career.
          </p>

          <div class='flex items-center justify-center gap-6 mt-4'>
            <div class='relative group'>
              <div
                class='animate-tilt absolute -inset-0.5 rounded-lg bg-gradient-to-r from-pink-600 to-purple-600 opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200'
              >
              </div>
              <a href='/blog'>
                <span
                  class='relative flex items-center py-4 leading-none divide-x divide-gray-600 rounded-lg bg-background px-7'
                >
                  <span class='flex items-center space-x-5'>
                    <!-- <Icons.pageBlog /> -->
                    <span class='text-sm'>Read posts</span>
                  </span>
                </span>
              </a>
            </div>
            <div class='relative group'>
              <div
                class='animate-tilt absolute -inset-0.5 rounded-lg bg-gradient-to-r from-fuchsia-600 to-emerald-600 opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200'
              >
              </div>
              <span
                class='relative flex items-center py-4 leading-none divide-x divide-gray-600 rounded-lg bg-background px-7'
              >
                <span class='flex items-center space-x-5'>
                  <!-- <Icons.command /> -->
                  <span class='text-sm'>Press âŒ˜ + K to start</span>
                </span>
              </span>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>
</RootLayout>
 @/components/icons/IconsSource @/data/about-data @/data/consts

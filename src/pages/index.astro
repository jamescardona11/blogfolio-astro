---
import Link from '@/components/Link.astro'
import Icons, { type IconKey } from '@/components/icons/Icons.astro'

import PageLayout from '@/layouts/PageLayout.astro'
import { socialNetwork } from '@/lib/data/static/about-me-data'
import { siteMetadata } from '@/site-metadata'
---

<PageLayout metaTitle='James Cardona - Home Page'>
  <section class='space-y-6'>
    <div class='flex flex-col items-center gap-4 text-center'>
      <div class='flex gap-3 mt-2'>
        {
          Object.keys(socialNetwork).map(key => {
            const element = socialNetwork[key]

            return (
              <Icons
                kind={element.icon as IconKey}
                href={element.link}
                size={5}
              />
            )
          })
        }
      </div>
      <h1 class='text-3xl font-heading sm:text-5xl md:text-6xl lg:text-7xl'>
        Welcome to my digital domain, I write about coding.
      </h1>
      <p
        class='max-w-[42rem] leading-normal text-muted-foreground sm:text-lg sm:leading-8'
      >
        I share my insights on crafting exceptional products, honing my
        developer prowess, and growing a successful tech career.
      </p>

      <div class='flex items-center justify-center gap-6 mt-4'>
        <div class='relative group'>
          <div
            class='animate-tilt absolute -inset-0.5 rounded-lg bg-gradient-to-r from-pink-600 to-purple-600 opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200'
          >
          </div>
          <a href='/blog'>
            <span
              class='relative flex items-center py-4 leading-none divide-x divide-gray-600 rounded-lg bg-background px-7'
            >
              <span class='flex items-center space-x-5'>
                <!-- <Icons.pageBlog /> -->
                <span class='text-sm'>Read posts</span>
              </span>
            </span>
          </a>
        </div>
        <div class='relative group'>
          <div
            class='animate-tilt absolute -inset-0.5 rounded-lg bg-gradient-to-r from-fuchsia-600 to-emerald-600 opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200'
          >
          </div>
          <span
            class='relative flex items-center py-4 leading-none divide-x divide-gray-600 rounded-lg bg-background px-7'
          >
            <span class='flex items-center space-x-5'>
              <!-- <Icons.command /> -->
              <span class='text-sm'>Press âŒ˜ + K to start</span>
            </span>
          </span>
        </div>
        <div class='relative group'>
          <div
            class='animate-tilt absolute -inset-0.5 rounded-lg bg-gradient-to-r from-fuchsia-600 to-emerald-600 opacity-50 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200'
          >
          </div>
        </div>
      </div>

      <div
        class='mx-auto flex max-w-[58rem] flex-col items-center space-y-4 text-center'
      >
        <h2 class='font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl'>
          Latest
        </h2>
        <p
          class='max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7'
        >
          See what I&apos;ve been up to lately. Consider giving a like, star or
          follow me.
        </p>
      </div>
    </div>

    <!-- Source code -->
    <section id='open-source' class='container py-8 md:py-12 lg:py-24'>
      <div
        class='mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center'
      >
        <h2 class='font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl'>
          Proudly Open Source
        </h2>
        <p
          class='max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7'
        >
          This page is open source and powered by open source software. <br />{
            ' '
          }
           The code is available on{' '}
          <Link
            href={siteMetadata.siteRepo}
            target='_blank'
            rel='noreferrer'
            class='underline underline-offset-4'
          >
            GitHub
          </Link>
           .{' '}
        </p>
        <Link
          href={siteMetadata.siteRepo}
          target='_blank'
          rel='noreferrer'
          class='flex'
        >
          <div
            class='flex items-center justify-center w-10 h-10 space-x-2 border rounded-lg border-muted bg-muted'
          >
            <svg
              xmlns='http://www.w3.org/2000/svg'
              fill='currentColor'
              viewBox='0 0 24 24'
              class='w-5 h-5 text-foreground'
            >
              <path
                d='M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z'
              ></path>
            </svg>
          </div>
          <div class='flex items-center'>
            <div
              class='w-4 h-4 border-l-0 border-r-8 border-solid border-y-8 border-muted border-y-transparent'
            >
            </div>
            <div
              class='flex items-center h-10 px-4 font-medium border rounded-lg border-muted bg-muted'
            >
              Add Star on GitHub
            </div>
          </div>
        </Link>
      </div>
    </section>
  </section>
</PageLayout>

---
import { Image } from 'astro:assets'
import type { RecommendationType } from '@/lib/types/recommendation.type'

interface Props {
  title: string
  items: RecommendationType[]
}

const { title, items } = Astro.props
---

<div class='space-y-8'>
  <h2 class='h3 font-sans text-zinc-800 dark:text-zinc-100'>{title}</h2>
  <div class='relative group'>
    <ul class='mt-8 space-y-8'>
      {
        items.map(item => () => (
          <li class='relative group'>
            <div class='flex items-start'>
              <div class='absolute left-0 h-14 w-14 flex items-center justify-center dark:border-zinc-800 bg-white dark:bg-zinc-900 rounded-full'>
                {item.image != null ? (
                  <Image
                    class='rounded-full'
                    src={item.image}
                    width={56}
                    height={56}
                    alt='Testimonial 04'
                  />
                ) : (
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    class='icon icon-tabler icon-tabler-relation-one-to-one'
                    width='24'
                    height='24'
                    viewBox='0 0 24 24'
                    stroke-width='2'
                    stroke='currentColor'
                    fill='none'
                    stroke-linecap='round'
                    stroke-linejoin='round'
                  >
                    <path stroke='none' d='M0 0h24v24H0z' fill='none' />
                    <path d='M3 5m0 2a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2z' />
                    <path d='M8 10h1v4' />
                    <path d='M15 10h1v4' />
                    <path d='M12 10.5l0 .01' />
                    <path d='M12 13.5l0 .01' />
                  </svg>
                )}
              </div>
              <div class='pl-20 space-y-1'>
                <div class='font-bold text-zinc-800 dark:text-zinc-100'>
                  {item.name}
                </div>
                <div class='text-sm font-medium text-zinc-800 dark:text-zinc-100'>
                  {item.position}
                </div>
                <div class='text-sm text-zinc-500 dark:text-zinc-400'>
                  {item.description}
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>

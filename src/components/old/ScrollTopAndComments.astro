<script client:visible>
    // Prevents the script from being executed multiple times
    // This is due to Astro's ViewTransition feature
    globalThis.isInitialized = false;

    if (!globalThis.isInitialized) {
        const scrollToTopButton = document.getElementById('scrollToTopButton');
        const commentsAndScrollToTopButtons = document.getElementById('commentsAndScrollToTopButtons');


        scrollToTopButton.addEventListener('click', () => {
            window.scrollTo({top: 0, behavior: 'smooth'})
        });

        window.addEventListener('scroll', () => {
            commentsAndScrollToTopButtons.classList.toggle('md:hidden', window.scrollY < 50)
            commentsAndScrollToTopButtons.classList.toggle('md:flex', window.scrollY >= 50)
        })


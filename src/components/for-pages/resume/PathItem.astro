---
import type { ExperienceType } from '@/lib/types/experience.type'
interface Props {
  item: ExperienceType
}

const { item } = Astro.props
---

<div
  class='flex items-start before:absolute before:left-0 before:h-full before:w-px before:bg-zinc-200 before:dark:bg-zinc-700 before:self-start before:ml-[28px] before:-translate-x-1/2 before:translate-y-8 before:group-last-of-type:hidden'
>
  <div
    class='absolute left-0 h-14 w-14 flex items-center justify-center border border-zinc-200 dark:border-zinc-700 bg-white dark:bg-zinc-700 rounded-full'
  >
    <slot />
  </div>
  <div class='pl-20 space-y-1'>
    <div class='text-xs text-zinc-500 uppercase'>
      {item.startedDate}{' '}
      <span class='text-zinc-400 dark:text-zinc-600'>Â·</span>{' '}
      {item?.endDate == null ? 'Present' : item?.endDate}
    </div>
    <div class='font-sans font-[650] text-zinc-800 dark:text-zinc-100'>
      {item.position}
    </div>
    <div class='text-sm font-medium text-zinc-800 dark:text-zinc-100'>
      {item.site}
    </div>
    <div class='text-sm text-zinc-500 dark:text-zinc-400'>
      {item.description}
    </div>
  </div>
</div>

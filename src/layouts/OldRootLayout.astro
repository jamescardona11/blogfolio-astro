---
import type { CollectionEntry } from 'astro:content'
import { ViewTransitions } from 'astro:transitions'

import Header from '../components/nav/header/Header.astro'
import Footer from '../components/nav/footer/Footer.astro'
import SectionContainer from '../components/old/SectionContainer.astro'

import { SITE_METADATA } from '../data/consts'
import BaseHead from './root/BaseHead.astro'

type Props = CollectionEntry<'blog'>['data']

const { title, description } = Astro.props
---

<html lang={SITE_METADATA.language} class='scroll-smooth'>
  <ViewTransitions />
  <BaseHead metaTitle={title} metaDescription={description} />
  <body
    class='bg-white text-black antialiased dark:bg-gray-950 dark:text-white'
  >
    <!--TODO: Add Google Analytics-->
    <!--<Analytics analyticsConfig={SITE_METADATA.analytics as AnalyticsConfig} />-->
    <SectionContainer>
      <div class='flex h-screen flex-col justify-between font-sans'>
        <Header />
        <main class='mb-auto'>
          <slot />
        </main>
        <Footer />
      </div>
    </SectionContainer>
  </body>
</html>

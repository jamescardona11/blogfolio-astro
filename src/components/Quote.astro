---
interface Props {
  styles?: string
  quote: string
  author?: string
}

const { styles, quote, author } = Astro.props
---

<blockquote
  class:list={[
    'text-sm rounded-md bg-muted p-2 dark:bg-muted border-l-0 ',
    styles
  ]}
>
  <div class='relative font-medium md:flex-grow overflow-visible'>
    <svg
      viewBox='0 0 32 32'
      class='absolute -top-2 left-4 -ml-8 text-zinc-300 z-10'
      fill='currentColor'
      width={16}
      height={16}
      aria-hidden='true'
    >
      <path
        d='M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z'
      ></path>
    </svg>
    <p class='relative px-2 italic text-muted-foreground'>{quote}</p>
    {
      author != null && (
        <footer class='mt-1 px-2'>
          <p class='text-sm font-medium text-zinc-500 dark:text-zinc-400'>
            {author}
          </p>
        </footer>
      )
    }
  </div>
</blockquote>

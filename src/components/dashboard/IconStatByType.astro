---
import Icons from '@/components/icons/Icons.astro'

interface Props {
  type: string
  color: string
}

const { type, color } = Astro.props

const className = 'fill-[var(--custom-color)] w-5 h-5'
const style = { '--custom-color': color }
---

{type === 'stars' && <Icons kind='start' class={className} style={style} />}
{
  type === 'followers' && (
    <Icons kind='github' class={className} style={style} />
  )
}
{type === 'views' && <Icons kind='views' class={className} style={style} />}
{type === 'likes' && <Icons kind='likes' class={className} style={style} />}
{
  type === 'contributions' && (
    <Icons kind='contributions' class={className} style={style} />
  )
}
{
  type === 'codingHours' && (
    <Icons kind='clock' class={className} style={style} />
  )
}

<PostLayout>
  <!-- TOP -->
  <div>
    <h1 id={TOP_ID} class='text-2xl font-medium sm:text-3xl'>{title}</h1>

    <div class='flex mt-2 space-x-2 text-lg text-zinc-100/50'>
      {
        date && (
          <p class='text-sm text-muted-foreground'>
            Published on <FormattedDate date={date} />
          </p>
        )
      }
